
{% extends 'base.html.twig' %}
{% block body %}

    <body>

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="#">Dashboard</a></li>

                        <li><a href="#">Table</a></li>
                        <li class="active">Data table</li>

                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Data Table</strong>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Tri
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="{{ path('triemedecin') }}">TriParNom</a>
                                <a class="dropdown-item" href="{{ path('trienummedecin') }}">TrieParId</a>
                            </div>

                        </div>

                        <div class="header-left">


                        </div>
                        <div class="card-body">
                            <div class="form-inline">
                                <form method="post" action="{{ path('searchDOC') }}" class="search-form">

                                    <input  class="form-control mr-sm-2" type="text" name="search" placeholder="Search ..." aria-label="Search"  >
                                    <input type="submit" value="Recherche" class="btn btn-info">

                                </form>
                            </div>
                            <table  class="table table-striped table-bordered">
                                <thead>
                                <tr>

        <td> ID </td>
        <td>Nom</td>
        <td>Prenom</td>
        <td>Liste des spécialités</td>
        <td>Email</td>
        <td>Num</td>
        <td>image </td>

        <td></td>
        <td></td>

    </tr>
                                </thead>
                                <tbody>
    {%for doc in listmedecin %}

    <tr>
        <td>{{ doc.id }}</td>
        <td>{{ doc.nom }}</td>
        <td>{{ doc.prenom }}</td>
        <td>
            {% set table = doc.getSpecialite %}
            {% for specialite in table  %}
                {{ specialite.getTitre }} -
            {% endfor %}
        </td>
        <td>{{ doc.email}}</td>
        <td>{{ doc.num}}</td>
        <td><img src=" {{ asset('Uploads/Image/' ~ doc.pic) }}" height="100" width="100" alt="{{ doc.nom }}"></td>
        <td><a href="{{ path('deleteDOC' ,{'id':doc.id})}}" >Supprimer</a></td>
        <td><a href="{{ path('updateDOC' ,{'id':doc.id})}}" >Modifier</a></td>




    </tr>

    {% endfor %}

            </tbody>
        </table>
    </div>
    </div>
    </div>


    </div>
    </div><!-- .animated -->
</div><!-- .content -->



    <!-- Right Panel -->



    </body>



{% endblock %}