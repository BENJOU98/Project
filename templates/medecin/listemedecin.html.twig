        <td>Num</td>
        <td>Specialist en </td>
        <td>image </td>

        <td></td>
        <td></td>

    </tr>
    {%for doc in listmedecin %}
    <tr>
        <td>{{ doc.id }}</td>
        <td>{{ doc.nom }}</td>
        <td>{{ doc.prenom }}</td>
        <td>{{ doc.email}}</td>
        <td>{{ doc.num}}</td>
        <td>{{ doc.specialite}}</td>
        <td>{{ doc.pic}}</td>
        <td><a href="{{ path('deleteDOC' ,{'id':doc.id})}}" >Supprimer</a></td>
        <td><a href="{{ path('updateDOC' ,{'id':doc.id})}}" >Modifier</a></td>



    </tr>

    {% endfor %}
    </table>
